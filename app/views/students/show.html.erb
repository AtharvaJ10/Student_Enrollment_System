<b>Name:</b> <%= @user.name %> <br>
<b>Email:</b> <%= @user.email %> <br>

<%= render @student %>
<%if current_user.user_type!='Instructor' && current_user.user_type!='Student' %>

  <div>
    <%= link_to "Edit this student", edit_student_path(@student) %> |
    <%= link_to "Back to students", students_path(:flag => {:flag_val => '0'}) %>

    <%= button_to "Destroy this student", @student, method: :delete %>
  </div>

<% end %>